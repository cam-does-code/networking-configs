## DHCP Relay - Extended DHCP Configuration vSRX 1.
/* By Benny Nielsen & Camilla Bartell */
version 12.1X47-D15.4;
system {
    host-name vSRX_1;
    /* pass = Rootpass */
    root-authentication {
        encrypted-password "$1$AieEmYzR$qg87iKhyZce4dGF2uWpyy1"; ## SECRET-DATA
    }
    services {
        ssh;
    }
}
interfaces {
    ge-0/0/0 { /* InterLAN - Forbindelsen mellem R1 og R2 */
        unit 0 {
            family inet {
                address 10.10.10.1/24;
            }
        }
    }
    ge-0/0/1 { /* VLAN 1 */
        unit 0 {
            family inet {
                address 192.168.1.1/24;
            }
        }
    }
    ge-0/0/2 { /* VLAN 2 */
        unit 0 {
            family inet {
                address 192.168.2.1/24;
            }
        }
    }
}
forwarding-options {
    helpers {
        bootp { /* Her konfigureres forwarding regler for indkommende BOOTP/DHCP requests */
            server 10.10.10.2;
            interface {
                ge-0/0/1;
                ge-0/0/2;
            }
        }
    }   
}
routing-options {
    static {
        route 192.168.3.0/24 next-hop 10.10.10.2;
        route 192.168.4.0/24 next-hop 10.10.10.2;
        route 0.0.0.0/0 next-hop 10.10.10.2; /* Default Route â€“ Her indstilles det at alle pakker som har en destinations IP som ikke kendes i routerens routetabel, videresendes til vSRX1 */
    }
}
security {
    policies {
        from-zone trust to-zone trust {
            policy default-permit {
                match {
                    source-address any;
                    destination-address any;
                    application any;
                }
                then {
                    permit;
                }
            }
        }
    }
    zones {
        security-zone trust {
            tcp-rst;
            interfaces {
                ge-0/0/1.0 {
                    host-inbound-traffic {
                        system-services {
                            ping;
                            ssh;
                            dhcp; /* Interfacet tildeles adgang til DHCP-serveren */
                        }
                    }
                }
                ge-0/0/2.0 {
                    host-inbound-traffic {
                        system-services {
                            ping;
                            ssh;
                            dhcp; /* Interfacet tildeles adgang til DHCP-serveren */
                        }
                    }
                }
                ge-0/0/0.0 {
                    host-inbound-traffic {
                        system-services {
                            ping;
                            ssh;
                        }
                    }
                }
            }
        }
        
    }
}