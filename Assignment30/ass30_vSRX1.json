version 12.1X47-D15.4;
/* By Benny Nielsen og Camilla Bartell */
system {
    host-name vSRX_1;
    /* pass = Rootpass */
    root-authentication {
        encrypted-password "$1$AieEmYzR$qg87iKhyZce4dGF2uWpyy1"; ## SECRET-DATA
    }
    services {
        ssh;
    }
}
interfaces {
    ge-0/0/0 {
        unit 0 {
            family inet {
                address 10.56.16.80/22; /* IP adressen der forbinder routeren til VMnet8 i Workstation */
            }
        }
    }
    ge-0/0/1 {
        unit 0 {
            family inet {
                address 192.168.1.1/24; /* Subnet 1 */
            }
        }
    }
    ge-0/0/2 {
        unit 0 {
            family inet {
                address 192.168.2.1/24; /* Subnet 2 */
            }
        }
    }
}
routing-options {
    static {
        route 0.0.0.0/0 next-hop 10.56.16.1; /* Default Route */
    }
}
security {
    nat {
        /* NAT changes the source address of egress IP packets */
        source {
            rule-set trust-to-untrust {
                from zone trust;
                to zone untrust;
                rule rule-any-to-any {
                    match {
                        source-address 0.0.0.0/0;
                        destination-address 0.0.0.0/0;
                    }
                    then {
                        source-nat {
                        /* Use egress interface source IP address */
                            interface;
                        }
                    }
                }
            }
        }
    }
    policies {
        from-zone trust to-zone trust { /* Politik der tillader alt trafik mellem enheder i zonen 'trust' */
            policy default-permit {
                match {
                    source-address any;
                    destination-address any;
                    application any;
                }
                then {
                    permit;
                }
            }
        }
        from-zone untrust to-zone trust { /* Politik der blokere alt trafik der kommer fra zonen 'untrust' til zonen 'trust' */
            policy default-deny {
                match {
                    source-address any;
                    destination-address any;
                    application any;
                }
                then {
                    deny;
                }
            }
        }
        from-zone trust to-zone untrust { /* Politik der tillader alt trafik der kommer fra zonen 'trust' til zonen 'untrust' */
            policy internet-access {
                match {
                    source-address any;
                    destination-address any;
                    application any;
                }
                then {
                    permit;
                }
            }
        }
    }
    zones {
        security-zone trust { /* Her oprettes zonen 'trust' og de 2 subnets tilføjes. Dette er zonen vi betegner som sikker */
            interfaces {
                ge-0/0/1.0 {
                    host-inbound-traffic {
                        system-services {
                            ping;
                        }
                    }
                }
                ge-0/0/2.0 {
                    host-inbound-traffic {
                        system-services {
                            ping;
                        }
                    }
                }
            }
        }
        security-zone untrust {/* Her oprettes zonen 'untrust' og routen til internettet tilføjes. Dette er zonen vi betegner som usikker */
            interfaces {
                ge-0/0/0.0 {
                    host-inbound-traffic {
                        system-services {
                            ping;
                        }
                    }
                }
            }
        }
    }
}